<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <%- include('partials/nav') %>
        <h1>Sign Up</h1>
        <form action="/signup" method="POST">
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="first_name"> First Name </label>
                <input class="form-control" type="text" name="first_name" placeholder="">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="last_name">Last Name</label>
                <input class="form-control" type="text" name="last_name" placeholder="">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="password">Password</label>
                <input class="form-control" type="text" name="password" placeholder="">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="email">E-mail</label>
                <input class="form-control" type="text" name="email" placeholder="">
            </div>
            <div class="form-check mid col-6">
                <label class="form-check-label" for="male">Male</label>
                <input class="form-check-input" type="radio" name="gender" value="male">
            </div>
            <div class="form-check mid col-6">
                <label class="form-check-label" for="female">Female</label>
                <input class="form-check-input" type="radio" name="gender" value="female">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="user_location">Location</label>
                <input class="form-control" type="text" name="user_location" placeholder="">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="date">Birth Date</label> <br>
                <input class="form-control" type="date" name="birth_date" placeholder="yyyy-mm-dd" value=""><br><br>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
        <%- include('partials/script') %> 
    </body>
</html>