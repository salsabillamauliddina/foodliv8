<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <%- include('partials/nav') %>
        <h1>Add Food</h1>
        <form action="/foodlist/add" method="POST">
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="food_name"> Food Name </label>
                <input class="form-control" type="text" name="food_name" placeholder="e.g Mie Yamin">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="origin">Origin</label>
                <input class="form-control" type="text" name="origin" placeholder="e.g Indonesia, Bandung">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="category">Category</label>
                    <select class="form-control" name="category">
                        <option selected disabled> Select Category </option>
                        <option value="Food"> Food </option>
                        <option value="Drink"> Drink </option>
                        <option value="Dessert"> Dessert </option>
                    </select>
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Put your though about your food here.">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
            <button class="btn btn-primary"><a href="/foodlist">Cancel</a></button>
        </form>
        <%- include('partials/script') %>
    </body>
</html>