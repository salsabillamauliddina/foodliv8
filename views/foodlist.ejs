<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <%- include('partials/nav') %>
        <h1>Food List</h1>
        <button class="btn btn-warning"><a href="/foodlist/add"> Add Food </a></button>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Food Name</th>
                    <th>Origin</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Modifier</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(el => { %>
                    <tr>
                        <td>IMAGE</td>
                        <td><%= el.food_name %></td>
                        <td><%= el.origin %></td>
                        <td><%= el.category %></td>
                        <td><%= el.description %></td>
                        <td>
                            <button class="btn btn-warning"><a href="/foodlist/<%= el.id %>/edit">Edit</a></button>
                            <button class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')"><a href="/foodlist/<%= el.id %>/delete">Delete</a></button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <%- include('partials/script') %> 
    </body>
</html>