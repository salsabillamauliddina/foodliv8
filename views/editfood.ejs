<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <%- include('partials/nav') %>
        <h1>Edit Food</h1>
        <form action="/foodlist/<%= data.id %>/edit" method="POST">
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="food_name"> Food Name </label>
                <input class="form-control" type="text" name="food_name" placeholder="e.g Mie Yamin" value="<%= data.food_name %>">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="origin">Origin</label>
                <input class="form-control" type="text" name="origin" placeholder="e.g Indonesia, Bandung" value="<%= data.origin %>">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="category">Category</label>
                <select class="form-control" name="category">
                <% if (data.category === "Food") { %>
                    <option value="Food" selected> Food </option>
                    <option value="Drink"> Drink </option>
                    <option value="Dessert"> Dessert </option>
                <% } else if (data.category === "Drink") {%>
                    <option value="Food"> Food </option>
                    <option value="Drink" selected> Drink </option>
                    <option value="Dessert"> Dessert </option>
                <% } else if (data.category === "Dessert") {%>
                    <option value="Food"> Food </option>
                    <option value="Drink"> Drink </option>
                    <option value="Dessert" selected> Dessert </option>
                <% } %>
                </select>
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Put your though about your food here." value="<%= data.description %>">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <button class="btn btn-primary"><a href="/foodlist">Cancel</a></button>
        </form>
        <%- include('partials/script') %> 
    </body>
</html>